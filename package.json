{
    "name": "cognosco",
    "version": "1.0.0",
    "description": "Learn anything - constantly expanding knowledge",
    "main": "app.js",
    "scripts": {
        "test": "echo 'Hello'",
        "ts": "tsc && tsc --project tsconfig.customHTMLElements.json",
        "jsmin": "run-for-every-file --src \"./public/\" --file \"**/*.js\" --not-file \"**/*.min.js\" --not-file \"**/*/\" --run \"minify public/js/{{file-name}}.js > public/js/{{file-name}}.min.js\"",
        "js": "npm run-script ts && npm run-script jsmin",
        "scss": "sass --no-source-map --style=compressed public/scss:public/css",
        "cssprefix": "postcss public/css/*.css --use autoprefixer --replace --no-map",
        "css": "npm run-script scss && npm run-script cssprefix",
        "build": "npm run-script js && npm run-script css",
        "start:none": "nodemon app.js",
        "start:css": "npm run-script scss && nodemon app.js",
        "start:js": "npm run-script ts && nodemon app.js",
        "start": "npm run-script build && nodemon app.js",
        "start:noWatch": "npm run-script build && node app.js"
    },
    "browserslist": "> 0.5%, last 2 versions, Firefox ESR, not dead",
    "author": "Joe Herbert (https://joeherbert.dev)",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^4.0.1",
        "connect-flash": "^0.1.1",
        "cookie-parser": "^1.4.5",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "http-errors": "^1.7.3",
        "lodash": "^4.17.15",
        "morgan": "^1.10.0",
        "mysql2": "^2.1.0",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
        "pug": "^2.0.4",
        "sequelize": "^5.21.6",
        "validator": "^13.0.0"
    },
    "devDependencies": {
        "autoprefixer": "^9.7.5",
        "minify": "^5.1.1",
        "nodemon": "^2.0.3",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^7.1.0",
        "sass": "^1.26.3"
    }
}
